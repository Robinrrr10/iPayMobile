<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image8"
    tools:context=".Activity_Confirm_Transaction">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Transfer"
        android:textColor="#FFFFFF"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="96dp"
        android:text="Amount:"
        android:textSize="25dp"
        android:textColor="@color/colorPrimary"/>
    <TextView
        android:id="@+id/tcamount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView16"
        android:layout_marginTop="50dp"
        android:text="500"
        android:textSize="35dp"
        android:textColor="#FFFFFF"/>
    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tcamount"
        android:layout_marginTop="40dp"
        android:text="Account No:"
        android:textSize="25dp"
        android:textColor="@color/colorPrimary"/>
    <TextView
        android:id="@+id/tcacc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView17"
        android:layout_marginTop="50dp"
        android:text="567876678889"
        android:textSize="35dp"
        android:textColor="#FFFFFF"/>
    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tcacc"
        android:layout_marginTop="40dp"
        android:text="Ifsc code:"
        android:textSize="25dp"
        android:textColor="@color/colorPrimary"/>
    <TextView
        android:id="@+id/tcifs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView18"
        android:layout_marginTop="50dp"
        android:text="INB0090091"
        android:textSize="35dp"
        android:textColor="#FFFFFF"/>
    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tcifs"
        android:layout_marginTop="40dp"
        android:text="Ifsc code:"
        android:textSize="25dp"
        android:textColor="@color/colorPrimary"/>
    <TextView
        android:id="@+id/tcnam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView19"
        android:layout_marginTop="50dp"
        android:text="Robin"
        android:textSize="35dp"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/buttconf"
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="Confirm"
        android:onClick="do_transfer"/>

    <Button
        android:id="@+id/buttcan"
        android:layout_width="188dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="Cancel"
        android:onClick="cancel_trans"/>
</RelativeLayout>