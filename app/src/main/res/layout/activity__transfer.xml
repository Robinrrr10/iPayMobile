<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image8"
    tools:context=".Activity_Transfer">


    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:text="Transfer Money"
        android:textSize="30dp"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="115dp"
        android:text="Transfer To:"
        android:textSize="25dp"
        android:textColor="#FFFFFF"/>

    <Spinner
        android:id="@+id/spinBeni"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/textView9"
        android:layout_marginTop="70dp"
        android:layout_marginHorizontal="70dp"
        />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/spinBeni"
        android:layout_marginTop="40dp"
        android:text="Name"
        android:textSize="25dp"
        android:textColor="#FFFFFF"/>

    <EditText
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/textView7"
        android:layout_marginTop="50dp"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView10"
        android:layout_marginTop="40dp"
        android:text="Account No:"
        android:textColor="#FFFFFF"
        android:textSize="25dp"/>

    <EditText
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/textView11"
        android:layout_marginTop="50dp"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView12"
        android:layout_marginTop="40dp"
        android:text="IFSC code"
        android:textSize="25dp"
        android:textColor="#FFFFFF"/>

    <EditText
        android:id="@+id/textView14"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/textView13"
        android:layout_marginTop="50dp"
        android:textSize="20dp"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView14"
        android:layout_marginTop="40dp"
        android:text="AMOUNT"
        android:textColor="#FFFFFF"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/tamount"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/textView15"
        android:layout_marginTop="50dp"
        android:textSize="20dp"
        android:textColor="@color/colorPrimary"/>

    <Button
        android:id="@+id/buttrans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Transfer Now"
        android:onClick="confirmTrans"/>

    <Button
        android:id="@+id/but_trans_conf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/spinBeni"
        android:text="New Account"
        />

    <Button
        android:id="@+id/buttosav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView9"
        android:text="To Saved Account"
        android:onClick="dissav"/>

</RelativeLayout>